{
	"name": "emittery",
	"version": "0.1.2",
	"description": "Simple and modern async event emitter",
	"license": "MIT",
	"repository": "sindresorhus/emittery",
	"author": {
		"name": "Sindre Sorhus",
		"email": "sindresorhus@gmail.com",
		"url": "sindresorhus.com"
	},
	"engines": {
		"node": ">=8"
	},
	"scripts": {
		"build": "babel -o legacy.js index.js",
		"prepack": "npm install && npm run build",
		"test": "xo && ava"
	},
	"files": [
		"index.js",
		"legacy.js"
	],
	"keywords": [
		"event",
		"emitter",
		"eventemitter",
		"events",
		"async",
		"emit",
		"on",
		"once",
		"off",
		"listener",
		"subscribe",
		"unsubscribe",
		"pubsub",
		"tiny",
		"addlistener",
		"addeventlistener",
		"dispatch",
		"dispatcher",
		"observer",
		"trigger",
		"await",
		"promise"
	],
	"devDependencies": {
		"ava": "*",
		"babel-cli": "^6.26.0",
		"babel-core": "^6.26.0",
		"babel-plugin-transform-async-to-generator": "^6.24.1",
		"babel-plugin-transform-es2015-spread": "^6.22.0",
		"delay": "^2.0.0",
		"xo": "*"
	},
	"babel": {
		"plugins": [
			"transform-async-to-generator",
			"transform-es2015-spread"
		]
	}
}
