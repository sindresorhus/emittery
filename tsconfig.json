{
	"compilerOptions": {
		"target": "es2017",
		"lib": ["es2017"],
		"module": "commonjs",
		"noImplicitAny": true,
		"noImplicitThis": true,
		"strictFunctionTypes": true,
		"strictNullChecks": true,
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"allowJs": true
	},
	"include": ["**/*.ts"],
	"exclude": ["test/fixtures/**/*"]
}
